<link rel="stylesheet" href="/stylesheets/cart.css">

<div class="container-fluid cart">
  <div class="row header-group">
    <div class="col-xs-2">
      <a href="/home" class=" glyphicon glyphicon-chevron-left  back-arrow"></a>
    </div>
    <div class="col-xs-8">
      <h1 class="text-center">{{title}}</h1>
    </div>
  </div>

  <div class="cart-table-th row">
    <div class="col-xs-5">
      <div class="select-all">
        <input type="checkbox" name="selectAll" value="true">
        <label for="">Select All</label>
      </div>
    </div>
    <div class="col-xs-3 text-center">
      <div class="total-price">
        <label for="">Total Price:<label>
        <div>{{totalPrice}}</div>
      </div>
    </div>
    <div class="col-xs-3  text-right">
      <button class="btn btn-success" data-toggle="modal" data-target=".login-or-register">CheckOut</button>
      <div class="modal fade login-or-register" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="row">
                 <a type="button" href="/login" class="col-xs-6 col-xs-offset-3 btn btn-primary">Login</a>
              </div>
              <div class="row">
                 <a type="button" href="/register" class="col-xs-6 col-xs-offset-3 btn btn-primary">Register</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="cart-order-list row">
    <ul class="list-unstyled container-fluid">
    {{#each dishArray}}
      <li class="row">
        <div class="col-xs-4">
          <div class="select">
            <input type="checkbox" name="select" value="true">
            <label for="">{{dishName}}</label>
          </div>
        </div>
        <div class="col-xs-3 text-center">
          <div class="unit-price">
            <div>{{unitPrice}}</div>
          </div>
        </div>
          <div class="col-xs-5  text-center">
          <div class="quantity btn-group row">
            <button type="button" class="col-xs-4 btn btn-default">-</button>
            <input type="text" class="col-xs-4 btn btn-default" value={{quantity}}>
            <button type="button" class="col-xs-4 btn btn-default">+</button>
          </div>
        </div>
      </li>
    {{/each}}
    </ul>
  </div>
  <div class="cart-table-footer row">
    <div class="col-xs-5">
      <div class="select-all">
        <input type="checkbox" name="selectAll" value="true">
        <label for="">Select All</label>
      </div>
    </div>
    <div class="col-xs-3 text-center">
      <div class="total-price">
        <label for="">Total Price:<label>
        <div>{{totalPrice}}</div>
      </div>
    </div>
    <div class="col-xs-3  text-right">
      <button class="btn btn-success">CheckOut</button>
    </div>
  </div>
</div>


